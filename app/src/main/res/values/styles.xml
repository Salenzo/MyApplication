<?xml version="1.0" encoding="utf-8"?>
<resources>
	<style name="AppStyle" parent="android:Theme.DeviceDefault">
		<!-- The most beautiful color in hexadecimal. -->
		<item name="android:navigationBarColor">#123456</item>
		<item name="android:statusBarColor">#abcdef</item>
		<item name="android:windowBackground">@android:drawable/zoom_plate</item>
	</style>
	<!--
		以下样式抄自android:Theme.SystemUI.MediaProjectionAlertDialog。
		Android系统的好东西总是只留给自己用。
		Stack Overflow上找来的过期样式会造成活动打开时一条黑影掠过屏幕。
	-->
	<style name="ActivityForAnotherActivity" parent="android:Theme.Translucent.NoTitleBar">
		<item name="android:windowIsTranslucent">true</item>
		<item name="android:windowIsFloating">true</item>
		<item name="android:backgroundDimEnabled">false</item>
	</style>
</resources>
